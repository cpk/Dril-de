<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#bda90d"
			                android:endColor="#bda90d"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#bcc200" />
			            <corners
			                android:radius="4dp" />
			             <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>		    
			  	<item>
			       <bitmap
					    android:src="@drawable/emot_c"
					    android:gravity="center|center_vertical"
			       		/>
		   		</item>
    	</layer-list>
    </item>
    <item>
           <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#f0d81f"
			                android:endColor="#bcc200"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#d1bb11" />
			            <corners
			                android:radius="4dp" />
			            <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>		    
			  	<item>
			       <bitmap
					    android:src="@drawable/emot_c"
					    android:gravity="center|center_vertical"
			       		/>
		   		</item>
    	</layer-list>
	</item>
</selector>