<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
	  <layer-list>
            <item>
		       <shape>
		           <gradient android:startColor="@color/selected" 
		               		 android:endColor="@color/selected"/>
				</shape> 
		    </item>
		  	<item>
		       <bitmap
				    android:src="@drawable/stop"
				    android:gravity="center|top"
		       		/>
		   </item>
    	</layer-list>
    </item>
    <item>
        <layer-list>
            <item>
		       <shape>
		        <gradient
		            android:angle="90"
		            android:startColor="#626262"
		            android:endColor="#454545"
		            android:type="linear" />
				</shape> 
	
		    </item>
		    
		  	<item>
		       <bitmap
				    android:src="@drawable/stop"
				    android:gravity="center|top"
		       		/>
		   </item>
    	</layer-list>
    </item>
</selector> 