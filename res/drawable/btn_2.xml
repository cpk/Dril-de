<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#7e9710"
			                android:endColor="#7e9710"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#a6bf39" />
			            <corners
			                android:radius="4dp" />
			             <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>		    
			  	<item>
			       <bitmap
					    android:src="@drawable/emot_b"
					    android:gravity="center|center_vertical"
			       		/>
		   		</item>
    	</layer-list>
    </item>
    <item>
           <layer-list>
               <item> 
			        <shape>
			            <gradient
			                android:startColor="#a6bf39"
			                android:endColor="#8fab11"
			                android:angle="270" />
			            <stroke
			                android:width="1dp"
			                android:color="#789202" />
			            <corners
			                android:radius="4dp" />
			             <padding  android:top="8dp" android:bottom="8dp" />
			        </shape>
			    </item>		    
			  	<item>
			       <bitmap
					    android:src="@drawable/emot_b"
					    android:gravity="top|center_vertical"
			       		/>
		   		</item>
    	</layer-list>
	</item>
</selector>